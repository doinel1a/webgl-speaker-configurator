    "@playwright/test": "^1.36.2",
    "@types/node": "^20.4.7",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.13",
    "cssnano": "^6.0.1",
